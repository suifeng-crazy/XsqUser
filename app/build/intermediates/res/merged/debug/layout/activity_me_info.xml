<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijingse">

    <!--  个人信息页面 顶部 -->
    <RelativeLayout
        android:id="@+id/MeInfo_topR"
        style="@style/base_title_white">
        <ImageView
            android:id="@+id/MeInfo_topI"
            style="@style/base_title_image"/>
        <TextView
            style="@style/base_title_text_red"
            android:text="@string/gerenxinxi"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MeInfo_topR">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/myInfo_headIR"
                style="@style/base_setUp_RelativeLayout"
                android:layout_height="87dp"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/setUp_text"
                    android:text="@string/touxiang"/>

                <ImageView
                    android:id="@+id/myInfo_headImageArrow"
                    style="@style/intoNextPage_arrow_gray_small2"/>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/myInfo_headImageArrow"
                    android:scaleType="centerInside"
                    android:src="@drawable/myheader"/>

                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myInfo_phoneR"
                style="@style/base_setUp_RelativeLayout">
                <TextView
                    style="@style/setUp_text"
                    android:text="@string/shoujihao"/>

                <ImageView
                    android:id="@+id/myInfo_phoneImage"
                    style="@style/intoNextPage_arrow_gray_small2"/>

                <TextView
                    android:id="@+id/MyInfo_phoneT"
                    style="@style/setUp_Huisetext"
                    android:layout_toLeftOf="@id/myInfo_phoneImage"
                    android:layout_marginRight="20dp"
                    android:text="@string/shoujihao"/>
                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/myInfo_nickNameR"
                style="@style/base_setUp_RelativeLayout">
                <TextView
                    style="@style/setUp_text"
                    android:text="@string/nicheng"/>
                <ImageView
                    android:id="@+id/myInfo_nikeNameI"
                    style="@style/intoNextPage_arrow_gray_small2"/>
                <TextView
                    style="@style/setUp_Huisetext"
                    android:layout_toLeftOf="@id/myInfo_nikeNameI"
                    android:layout_marginRight="20dp"
                    android:text="@string/nicheng"/>
                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/myInfo_sexR"
                style="@style/base_setUp_RelativeLayout">
                <TextView
                    style="@style/setUp_text"
                    android:text="@string/xingbie"/>
                <ImageView
                    android:id="@+id/myInfo_sexI"
                    style="@style/intoNextPage_arrow_gray_small2"/>
                <TextView
                    style="@style/setUp_Huisetext"
                    android:layout_toLeftOf="@id/myInfo_sexI"
                    android:layout_marginRight="20dp"
                    android:text="@string/xingming"/>
                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/myInfo_realNameR"
                style="@style/base_setUp_RelativeLayout">
                <TextView
                    style="@style/setUp_text"
                    android:text="@string/zhengshixingming"/>
                <ImageView
                    android:id="@+id/myInfo_realNameI"
                    style="@style/intoNextPage_arrow_gray_small2"/>
                <TextView
                    style="@style/setUp_text"
                    android:layout_toLeftOf="@id/myInfo_realNameI"
                    android:layout_marginRight="20dp"
                    android:text=""/>
                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>
            <!-- 下面是个性签名。不好填写，暂时隐藏-->
            <RelativeLayout
                android:id="@+id/myInfo_signR"
                style="@style/base_setUp_RelativeLayout"
                android:visibility="gone">
                <TextView
                    style="@style/setUp_text"
                    android:text="@string/gexingqianming"/>
                <ImageView
                    style="@style/intoNextPage_arrow_gray_small2"/>
                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/myInfo_threeT"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/dangqianbangdingdedisanfang"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_11"
                android:textColor="#999999"/>
            <RelativeLayout
                android:id="@+id/myInfo_WXR"
                style="@style/base_setUp_RelativeLayout">
                <TextView
                    style="@style/setUp_text"
                    android:text="@string/weixin"/>
                <ImageView
                    style="@style/intoNextPage_arrow_gray_small2"/>
                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/myInfo_QQR"
                style="@style/base_setUp_RelativeLayout">
                <TextView
                    style="@style/setUp_text"
                    android:text="@string/QQhao"/>
                <ImageView
                    style="@style/intoNextPage_arrow_gray_small2"/>
                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>
            <!--下面是收货地址，第一版没有设置为不显示-->
            <RelativeLayout
                android:id="@+id/myInfo_addressR"
                style="@style/base_setUp_RelativeLayout"
                android:visibility="gone">
                <TextView
                    style="@style/setUp_text"
                    android:text="@string/shouhuodizhi"/>
                <ImageView
                    style="@style/intoNextPage_arrow_gray_small2"/>
                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/myInfo_recommdeR"
                style="@style/base_setUp_RelativeLayout"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    style="@style/setUp_text"
                    android:text="@string/tuijianren"/>
                <ImageView
                    android:id="@+id/myInfo_recommdeI"
                    style="@style/intoNextPage_arrow_gray_small2"/>
                <TextView
                    style="@style/setUp_Huisetext"
                    android:layout_toLeftOf="@id/myInfo_recommdeI"
                    android:layout_marginRight="20dp"
                    android:text="Myzk458xL"/>
                <View
                    style="@style/setUp_henxianV"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
