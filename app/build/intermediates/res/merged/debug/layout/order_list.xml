<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--顶部 -->
    <RelativeLayout
        android:id="@+id/orderListItem_topR"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/orderListItem_storeBZ"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/store"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/orderListItem_storeNameT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="店铺名称"
            android:layout_toRightOf="@id/orderListItem_storeBZ"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="10dp"
            style="@style/base_arrow_gray_small"
            android:layout_toRightOf="@id/orderListItem_storeNameT"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/orderListItem_deleteI"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/delete"
            />
        <TextView
            android:id="@+id/orderListItem_orderStatusT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@id/orderListItem_deleteI"
            android:text="订单状态"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/orderListItem_orderStatusI"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/orderListItem_orderStatusT"
            android:layout_marginRight="10dp"
            android:src="@drawable/order_over"/>
    </RelativeLayout>
    <!--顶部 -->
    <!--中间-->
    <RelativeLayout
        android:id="@+id/orderListItem_contentR"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/orderListItem_topR"
        android:padding="20dp"
        android:background="@color/beijingse">
        <ImageView
            android:id="@+id/orderListItem_storeI"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/user_car"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/orderListItem_shopT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/orderListItem_storeI"
            android:text="订单内容"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/orderListItem_moneyT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/orderListItem_moneyI"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/first_first_selected"
            android:layout_toLeftOf="@id/orderListItem_moneyT"
            android:layout_alignTop="@id/orderListItem_moneyT"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/orderListItem_shopNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="共1件商品  实付款："
            android:layout_toLeftOf="@id/orderListItem_moneyI"
            />
    </RelativeLayout>
    <!--中间-->
    <!--底部-->
    <RelativeLayout
        android:layout_below="@id/orderListItem_contentR"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingRight="20dp">
        <TextView
            style="@style/orderListItem_button"
            android:text="@string/zailaiyidan"
            android:textColor="@color/colorRed"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <!--底部-->
</RelativeLayout>